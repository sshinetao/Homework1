@model IEnumerable<Homework1.Models.Movie>

@{
    ViewBag.Title = "电影频道";
}

    <div class="row-fluid" style="margin-top:15px;">
        <div class="span12">
            <ol class="breadcrumb">
                <li><a href="/HOme/Index">首页</a></li>
                <li><a href="/Movies/Index">电影</a></li>
                <li class="active">首页</li>
            </ol>
        </div>
    </div>

<style>
    #type {
        height: 35px;
        padding: 6px 9px;
        font-size: 13px;
        line-height: 1.5;
        border-radius: 3px;
    }
</style>
<div class="form-inline">
    <div class="form-group">
        <p>

            @using (Html.BeginForm("Index", "Movies", FormMethod.Get))
            {  @Html.DropDownList("type", "全部类型")
                <div class="input-group input-group-sm">
                    @Html.TextBox("SearchString", "", new { @class = "form-control" })
                </div>
                <input type="submit" class="btn btn-default btn-sm" value="搜索" />

            }
        </p>

    </div>
</div>


@foreach (var item in Model)
        {
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="thumbnail">
            <img src="..." alt="...">
            <div class="caption">
                <h3><strong>@Html.DisplayFor(modelItem => item.mTitle)</strong></h3>
                <p><strong>@Html.DisplayNameFor(model => model.mReleaseDate)</strong>  @Html.DisplayFor(modelItem => item.mReleaseDate)})</p>
                <p><strong>@Html.DisplayNameFor(model => model.mGenre)</strong> @Html.DisplayFor(modelItem => item.mGenre)</p>
                <p><strong>@Html.DisplayNameFor(model => model.mCountry) </strong>@Html.DisplayFor(modelItem => item.mCountry)</p>
                <p><strong>@Html.DisplayNameFor(model => model.mContent)</strong> @Html.DisplayFor(modelItem => item.mContent)</p>
                <p>@Html.ActionLink("详情", "Details", new { id = item.id })</p>
            </div>
        </div>
    </div>
</div>

}








  