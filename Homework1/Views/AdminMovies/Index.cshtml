@model IEnumerable<Homework1.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

</head>
<body>
    <style>
        #type {
            height: 35px;
            padding: 6px 9px;
            font-size: 13px;
            line-height: 1.5;
            border-radius: 3px;
        }
    </style>
    <div class="form-inline">
        <div class="form-group">
            <p>

                @using (Html.BeginForm("Index", "AdminMoives", FormMethod.Get))
                {  @Html.DropDownList("type", "全部类型")
                    <div class="input-group input-group-sm">
                        @Html.TextBox("SearchString", "", new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-default btn-sm" value="搜索" />

                }
            </p>

        </div>
    </div>
    <p>
        @Html.ActionLink("添加电影", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mCountry)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.mContent)
            </th>

            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.mTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mCountry)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.mContent)
            </td>
           
            <td>
                @Html.ActionLink("编辑", "Edit", new { id=item.id }) |
                @Html.ActionLink("详情", "Details", new { id=item.id }) |
                @Html.ActionLink("删除", "Delete", new { id=item.id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
