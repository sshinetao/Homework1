@model Homework1.Models.IndexViewModel
@{
    ViewBag.Title = "管理";
}
@{
    Layout = null;
}
<title>Index</title><link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>@ViewBag.Title。</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>更改你的帐户设置</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>密码:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("更改密码", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("创建", "SetPassword")
            }
            ]
        </dd>  
        
    </dl>
</div>
