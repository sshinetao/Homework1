@{
    Layout = null;
}
@using Microsoft.AspNet.Identity


<!DOCTYPE html>
<html>
<head>
    <title>后台管理系统</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />


    <link href="~/Content/assets/css/dpl-min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bui-min.css" rel="stylesheet" />

    <link href="~/Content/assets/css/main-min.css" rel="stylesheet" />

</head>
<body>

    <div class="header">

        <div class="dl-title">
            <!--<img src="/chinapost/Public/assets/img/top.png">-->
        </div>

        <div class="dl-log">
           @Html.ActionLink("你好，" + User.Identity.GetUserName() + "!", "Index", "Admin", routeValues: null, htmlAttributes: new { title = "密码修改", @class = "dl-log-quit" })
            <a href="javascript:document.getElementById('logoutForm').submit()" title="退出系统" class="dl-log-quit">[退出]</a> 
            <a href="/Home/Index" class="dl-log-quit">[首页]</a>
        </div>
    </div>
    <div class="content">
        <div class="dl-main-nav">
            <div class="dl-inform"><div class="dl-inform-title"><s class="dl-inform-icon dl-up"></s></div></div>
            <ul id="J_Nav" class="nav-list ks-clear">
                <li class="nav-item dl-selected"><div class="nav-item-inner nav-home">资源管理</div></li>
                <li class="nav-item dl-selected"><div class="nav-item-inner nav-order">密码</div></li>
            </ul>
        </div>
        <ul id="J_NavContent" class="dl-tab-conten"></ul>
    </div>

    <script src="~/Content/assets/js/jquery-1.8.1.min.js"></script>

    <script src="~/Content/assets/js/bui-min.js"></script>

    <script src="~/Content/assets/js/common/main-min.js"></script>

    <script src="~/Content/assets/js/config-min.js"></script>
    <script>
        BUI.use('common/main', function () {
            var config = [{ id: '1', menu: [{ text: '管理', items: [{ id: '4', text: '电影', href: '../AdminMovies/Index' }, { id: '6', text: '音乐', href: '../AdminSongs/Index' }] }] }, { id: '7', homePage: '9', menu: [{ text: '密码管理', items: [{ id: '9', text: '密码更改', href: '../Manage/Index' }] }] }];
            new PageUtil.MainPage({
                modulesConfig: config
            });
        });
    </script>
    
</body>
</html>
