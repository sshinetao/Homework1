@model IEnumerable<Homework1.Models.Song>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>


    <style>
        #type {
            height: 35px;
            padding: 6px 9px;
            font-size: 13px;
            line-height: 1.5;
            border-radius: 3px;
        }
    </style>
    <div class="form-inline">
        <div class="form-group">
            <p>

                @using (Html.BeginForm("Index", "AdminSongs", FormMethod.Get))
                {  @Html.DropDownList("type", "全部类型")
                    <div class="input-group input-group-sm">
                        @Html.TextBox("SearchString", "", new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-default btn-sm" value="搜索" />

                }
            </p>

        </div>
    </div>


    <p>
        @Html.ActionLink("添加音乐", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sphoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sLink)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sphoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sLink)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id=item.id }) |
                @Html.ActionLink("详情", "Details", new { id=item.id }) |
                @Html.ActionLink("删除", "Delete", new { id=item.id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
